<theme>
   <formatVersion>6</formatVersion>

   <variables>
      <mainFont>./_inc/fonts/Oxygen-Regular.ttf</mainFont>
      <boldFont>./_inc/fonts/OpenSans-Semibold.ttf</boldFont>
      <spacerImage>./_inc/images/utility/space.png</spacerImage>
      <!-- 
      Apsect Ratio Options:
      16:9 = 16-9
      16:10 = 16-10
      -->
      <aspectRatio>16-9</aspectRatio>
      <!-- 
      Color Scheme Options:
      dark
      light
      -->
      <colorScheme>dark</colorScheme>
   </variables>

   <include>./color-scheme-${colorScheme}.xml</include>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <origin>1 1</origin>
         <fontPath>${mainFont}</fontPath>
      </helpsystem>
      <text name="logoText">
         <fontPath>${boldFont}</fontPath>
         <lineSpacing>1</lineSpacing>
      </text>
      <image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 0</size>
         <path>./_inc/images/systems/${system.theme}-background.jpg</path>
         <zIndex>1</zIndex>
      </image>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>true</tile>
         <path>${spacerImage}</path>
         <zIndex>0</zIndex>
      </image>
   </view>

   <view name="system">
      <image name="logo">
         <path>./_inc/images/systems/${system.theme}-carousel.jpg</path>
      </image>
      <text name="logoText">
         <text>  ${system.fullName}  </text>
         <alignment>center</alignment>
         <color>ffffff</color>
         <backgroundColor>222222</backgroundColor>
      </text>
      <carousel name="systemcarousel">
         <type>horizontal</type>
         <color>00000000</color>
         <maxLogoCount>10</maxLogoCount>
         <logoAlignment>center</logoAlignment> 
         <zIndex>42</zIndex>     
      </carousel>
      <text name="systemInfo">
         <origin>0 1</origin>
         <backgroundColor>00000000</backgroundColor>
         <fontPath>${boldFont}</fontPath>
         <alignment>center</alignment>
      </text>
      <image name="mask" extra="true">
         <path>./_inc/images/utility/system-view-mask-${aspectRatio}-${colorScheme}.png</path>
         <zIndex>41</zIndex>
      </image>
   </view>

   <view name="basic,detailed,video">
      <image name="logo">
         <origin>0 .5</origin>
         <path>./_inc/images/systems/${system.theme}-logo.svg</path>
      </image>
      <text name="logoText">
         <origin>0 .5</origin>
         <text>${system.name}</text>
         <alignment>left</alignment>
         <forceUppercase>true</forceUppercase>
      </text>
      <textlist name="gamelist">
         <fontPath>${mainFont}</fontPath>
         <alignment>left</alignment>
         <zIndex>42</zIndex>
      </textlist>
      <image name="mask" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <zIndex>41</zIndex>
      </image>
   </view>

   <view name="basic">
      <image name="mask" extra="true">
         <path>./_inc/images/utility/gamelist-view-mask-${aspectRatio}-${colorScheme}.png</path>
      </image>
   </view>
 
   <view name="detailed,video">
      <text name="md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_lbl_playcount, md_lbl_lastplayed, md_lbl_players, md_lbl_releasedate, md_lbl_genre, md_lbl_gametime">
         <pos>1 1</pos>
      </text>
      <text name="md_name, md_publisher, md_playcount, md_players, md_gametime">
         <pos>1 1</pos>
      </text>
      <datetime name="md_lastplayed">
         <pos>1 1</pos>
      </datetime>
      <text name="md_developer,md_genre">
         <fontPath>${boldFont}</fontPath>
         <zIndex>51</zIndex> 
      </text>
      <datetime name="md_releasedate">
         <fontPath>${boldFont}</fontPath>
         <zIndex>51</zIndex> 
      </datetime>
      <rating name="md_rating">
         <filledPath>./_inc/images/utility/star-filled.svg</filledPath>
         <unfilledPath>./_inc/images/utility/star-empty.svg</unfilledPath>
         <zIndex>51</zIndex>
      </rating>
      <text name="md_description">
         <fontPath>${mainFont}</fontPath>
         <zIndex>51</zIndex>
      </text>
      <image name="mask" extra="true">
         <path>./_inc/images/utility/gamelist-view-mask-${aspectRatio}-${colorScheme}-metadata.png</path>
      </image>
   </view>

   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <zIndex>51</zIndex> 
      </image>
   </view>

   <view name="video">
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <delay>1</delay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>        
         <zIndex>51</zIndex> 
      </video>
   </view>

   <feature supported="navigationsounds">
      <view name="all">
         <sound name="systembrowse">
            <path>./_inc/sounds/systembrowse.wav</path>
         </sound>
         <sound name="quicksysselect">
            <path>./_inc/sounds/quicksysselect.wav</path>
         </sound>
         <sound name="select">
            <path>./_inc/sounds/select.wav</path>
         </sound>
         <sound name="back">
            <path>./_inc/sounds/back.wav</path>
         </sound>
         <sound name="scroll">
            <path>./_inc/sounds/scroll.wav</path>
         </sound>
         <sound name="favorite">
            <path>./_inc/sounds/favorite.wav</path>
         </sound>
         <sound name="launch">
            <path>./_inc/sounds/launch.wav</path>
         </sound>
      </view>
   </feature>

   <include>./aspect-ratio-${aspectRatio}.xml</include>
	
</theme>